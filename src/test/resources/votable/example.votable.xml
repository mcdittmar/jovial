        <TABLE ID="_sdss_mags">
            <FIELD ID="_container" name="parentId" datatype="char" arraysize="*"/>
            <FIELD ID="_mag" name="mag" datatype="float"/>
            <FIELD ID="_eMag" name="eMag" datatype="float"/>
            <FIELD ID="_filter" name="filter" datatype="char" arraysize="*"/>
